<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
<!--	namespace &#45;&#45;url-->
	<!-- 要注意Struts2默认文件上传最大为2M即便你设置了<param name="maximumSize">5242880</param>
          当上传的文件大于2M时候也会出错的这时要设置，另外一个常量
    <constant name="struts.multipart.maxSize" value="1000000000"/> -->


	 <package name="test" namespace="/login" extends="struts-default">
		 <action name="login" class="com.soft.web.LoginAction">
			 <result name="ok" type="chain">
				 <param name="namespace">/user</param>
				 <param name="actionName">userM</param>
				 <param name="methodName">findByName</param>
				<!-- path: user/userM!findByName.action-->
			 </result>
			<result name="no" type="redirect">/login.jsp</result>
		 </action>
	 </package>
	<package name="test1" namespace="/test1" extends="json-default">
		<action name="login" class="com.soft.web.LoginAction">

			<result name="goods" type="json">
				<param name="root">remap</param>

			</result>
		</action>


	</package>



	<package name="user" namespace="/user" extends="struts-default">
		<interceptors>
			<interceptor name="first" class="com.soft.interceptor.FristInterceptor"></interceptor>
			<interceptor-stack name="mystack">
					<interceptor-ref name="first"></interceptor-ref>
					<interceptor-ref name="defaultStack"></interceptor-ref>

			</interceptor-stack>
		</interceptors>



		<default-interceptor-ref name="first"></default-interceptor-ref>
		<global-results>
			<result name="error" >/error.jsp</result>

		</global-results>

		<action name="userM" class="com.soft.web.UserAction">
			<result name="success">/success.jsp</result>

		</action>

		<action name="uploads" class="com.soft.web.UploadAction" >
			<result name="success">/success.jsp</result>
			<interceptor-ref name="fileUpload">
			<param name="maximumSize">10240000</param>
			<param name="allowedTypes">text/plain,application/vnd.ms-powerpoint</param>
			<param name="allowedExtensions">.txt,.ppt</param>
		</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>

		</action>

	</package>

	 
</struts>